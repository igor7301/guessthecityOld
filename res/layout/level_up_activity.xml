<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:id="@+id/levelUpLayout"
              tools:context=".LevelUpActivity" android:background="@drawable/level_up">



    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/new_level_message"
            android:id="@+id/textViewLevelUpInfo"
            android:textSize="25dp" android:gravity="center"
            android:textColor="#ffffffff"
            android:layout_above="@+id/linearLayout" android:layout_toRightOf="@+id/linearLayout"
            android:layout_toEndOf="@+id/linearLayout"/>

    <LinearLayout android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerVertical="true" android:layout_alignParentLeft="true"
                  android:id="@+id/linearLayout"
                  android:orientation="horizontal">

    </LinearLayout>

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continue_to_next_level"
            android:id="@+id/buttonContinue" android:layout_gravity="center_horizontal"
            android:background="@drawable/buttons_background"
            android:layout_marginTop="40dp"
            android:layout_below="@+id/linearLayout" android:layout_centerHorizontal="true"/>

    <com.startapp.android.publish.banner.Banner
            android:id="@+id/startAppBanner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            />
</RelativeLayout>