<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:id="@+id/levelUpLayout" tools:context=".LevelUpActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Новый уровень"
            android:id="@+id/textViewLevelUpInfo" android:layout_gravity="center_horizontal"
            android:layout_margin="20dp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Далее"
            android:id="@+id/buttonContinue" android:layout_gravity="center_horizontal"
            android:background="@drawable/default_button"/>
</LinearLayout>